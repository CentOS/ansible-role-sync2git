[altsrc]
#pagure api
# pagure_repo_init_api = https://git.dev.centos.org/api/0/new
pagure_api_key_file = /etc/altsrc-pagure.key
pagure_repo_init_api = https://{{ GIT_URL }}/api/0/new

#directories
stagedir = {{ ALTSRC_STAGE_DIR }}
gitdir = /tmp/git
lookaside = /tmp/lookaside
# rulesdir = /mnt/redhat/altsrc/rules/
 
#push location
git_push_url_module = git@{{ GIT_URL }}:/modules/%(package)s.git
git_push_url = git@{{ GIT_URL }}:/rpms/%(package)s.git
lookaside_rsync_dest = centosrcm@{{ GIT_URL }}:/srv/cache/lookaside/

 
log_level = INFO
blacklist =
        redhat-release
        redhat-release-*
        redhat-logos
        redhat-indexhtml
        Red_Hat_Enterprise_Linux-Release_Notes*
 
#smtp options
smtp_enabled = yes
smtp_host=smtp.corp.redhat.com
smtp_to=bstinson@redhat.com
smtp_log_to=bstinson@redhat.com
smtp_from = CentOS Stream Alt Source <altsrc@redhat.com>
